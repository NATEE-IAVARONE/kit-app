{
  "name": "KIT",
  "description": "Multiplatform tools",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "debugger"
  ],
  "action": {
    "default_title": "Svelte Extension",
    "default_icon": "favicon.png",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "__matches": ["<all_urls>"],
      "matches": ["http://localhost:5173/tools"],
      "css": ["content-styles.css"],
      "js": ["content-script.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "default-src 'self' http://localhost:5173; style-src 'unsafe-inline'; img-src 'self' http://localhost:5173 data:; script-src-elem 'self' http://localhost:5173"
  }
}